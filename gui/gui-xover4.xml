<vbox>
    <hbox spacing="10">
        <frame label="Input">
            <vbox attach-x="0">
                <vumeter param="meter_L" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meter_R" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <label param="level" />
                <knob param="level" size="5" />
                <value param="level" />
            </vbox>
        </frame>
        <frame label="X-Over">
            <vbox>
                <if cond="directlink">
                    <line-graph refresh="1" width="440" height="120" param="freq0" expand="1" fill="1" crosshairs="1" freqhandles="5" enforce-handle-order="1" handle1-x="freq0" handle2-x="freq1" handle3-x="freq2"/>
                </if>
                <hbox>
                    <vbox>
                        <knob param="freq0" size="3"/>
                        <value param="freq0"/>
                    </vbox>
                    <vbox>
                        <knob param="freq1" size="3"/>
                        <value param="freq1"/>
                    </vbox>
                    <vbox>
                        <knob param="freq2" size="3"/>
                        <value param="freq2"/>
                    </vbox>
                    <vbox>
                        <combo param="mode" fill="0" expand="0"/>
                        <label/>
                        <label text="Filter Mode"/>
                    </vbox>
                </hbox>
            </vbox>
        </frame>
    </hbox>
    <hbox>
        <frame label="Band 1">
            <vbox>
                <hbox>
                    <vbox>
                        <knob param="level1" type="1"/>
                        <value param="level1"/>
                    </vbox>
                    <vbox>
                        <toggle param="active1"/>
                        <label text="Active"/>
                    </vbox>
                </hbox>
                <label/>
                <vumeter param="meterL1" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meterR1" mode="0" position="2" hold="1.5" falloff="2.5"/>
            </vbox>
        </frame>
        
        <frame label="Band 2">
            <vbox>
                <hbox>
                    <vbox>
                        <knob param="level2" type="1"/>
                        <value param="level2"/>
                    </vbox>
                    <vbox>
                        <toggle param="active2"/>
                        <label text="Active"/>
                    </vbox>
                </hbox>
                <label/>
                <vumeter param="meterL2" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meterR2" mode="0" position="2" hold="1.5" falloff="2.5"/>
            </vbox>
        </frame>
        
        <frame label="Band 3">
            <vbox>
                <hbox>
                    <vbox>
                        <knob param="level3" type="1"/>
                        <value param="level3"/>
                    </vbox>
                    <vbox>
                        <toggle param="active3"/>
                        <label text="Active"/>
                    </vbox>
                </hbox>
                <label/>
                <vumeter param="meterL3" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meterR3" mode="0" position="2" hold="1.5" falloff="2.5"/>
            </vbox>
        </frame>
        
        <frame label="Band 4">
            <vbox>
                <hbox>
                    <vbox>
                        <knob param="level4" type="1"/>
                        <value param="level4"/>
                    </vbox>
                    <vbox>
                        <toggle param="active4"/>
                        <label text="Active"/>
                    </vbox>
                </hbox>
                <label/>
                <vumeter param="meterL4" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meterR4" mode="0" position="2" hold="1.5" falloff="2.5"/>
            </vbox>
        </frame>
    </hbox>
</vbox>
